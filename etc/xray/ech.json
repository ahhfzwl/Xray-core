{
  "log": {
    "loglevel": "warning"
  },
  "inbounds": [
    {
      "port": 1080,
      "protocol": "socks",
      "settings": {
        "auth": "noauth",
        "udp": true,
        "ip": "127.0.0.1"
      }
    }
  ],
  "outbounds": [
    {
      "protocol": "vless",
      "settings": {
        "vnext": [
          {
            "address": "example.com",  // ⚠️ 替换为您的服务器地址（域名或IP）
            "port": 443,               // ⚠️ 替换为服务器监听的端口
            "users": [
              {
                "id": "11112222-3333-4444-aaaa-bbbbccccdddd", // 替换为您的 UUID
                "encryption": "none",
                "flow": "" 
              }
            ]
          }
        ]
      },
      "streamSettings": {
        "network": "tcp", // VLESS + xhttp 模式通常在客户端使用 TCP 或其他网络类型
        "security": "tls", // 启用 TLS
        "tlsSettings": {
          "allowInsecure": false,
          "serverName": "www.fake-domain.com", // ⚠️ 替换为伪装的 SNI 域名
          "alpn": ["h2", "http/1.1"],
          "echSettings": { // ECH 配置
            "enabled": true
            // "ech_config": "..." // ⚠️ 如果需要手动指定 ECH Config，可在此处添加，否则客户端通常会自动从 DNS-over-HTTPS/TLS 获取。
          }
        },
        "tcpSettings": {
          // 由于服务端使用 xhttp，如果客户端也需对应，可将 network 设为 "http" 或在 tcpSettings 中模拟 http 行为
          "header": {
            "type": "http",
            "request": {
              "path": ["/your/path"] // ⚠️ 替换为服务器配置的 path
            }
          }
        }
      },
      "tag": "proxy"
    },
    {
      "protocol": "freedom",
      "tag": "direct"
    }
  ]
}
